# Environment Configuration for NMS Application
# Copy this file to .env and update with your secure values

# Database Configuration
MONGODB_URI=mongodb://admin:password123@mongodb:27017/nms_db?authSource=admin

# JWT Configuration - REQUIRED: Generate a strong secret key
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecureAdminPassword123!

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Server Configuration
NODE_ENV=production
PORT=5000
CREATE_ADMIN_USER=true

# Database Credentials (for Docker)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=nms_db

# Security Notes:
# 1. Change all default passwords before deployment
# 2. Use a strong JWT_SECRET (minimum 32 characters)
# 3. Keep this file secure and never commit it to version control
# 4. Use environment variables in production deployment